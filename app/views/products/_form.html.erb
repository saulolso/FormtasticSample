<% semantic_form_for @product do |form| %>

  <% form.inputs do %>
    <%= form.input :category %>
    <%= form.input :name %>
    <%= form.input :description, :required => false, :input_html => {:rows => 3} %>
    <%= form.input :price, :input_html => {:size => 10} %>
    <%= form.input :status, :as => :select %>
  <% end -%>

  <% form.inputs do %>
    <%= form.commit_button %>
  <% end -%>

<% end -%>